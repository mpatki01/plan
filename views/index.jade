extends layout

block content
  h1= title
  p Welcome to #{title}
  input(id="name", type="text", data-bind="value: name")
  button(data-bind="click: sayHello") Submit
  br
  label(id="greeting", data-bind="text: salutation")

block scripts
    script(src="/javascripts/jquery-1.10.2.min.js", type="text/javascript")
    script(src="/javascripts/knockout-3.0.0.js", type="text/javascript")
    script(src="/javascripts/index.js", type="text/javascript")
