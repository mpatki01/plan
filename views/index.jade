extends layout

block content
  h1= title
  p Welcome to #{title}
  ul(data-bind="foreach: tasks")
    li
        span(data-bind="text: name")
        |
        a(href="#", data-bind="click: $root.removeTask.bind($root)") delete
  hr
  input(id="name", type="text", data-bind="value: nameToAdd, , valueUpdate: 'afterkeydown'")
  button(data-bind="click: add($data), enable: nameToAdd().length > 0") Submit

block scripts
    script(src="/javascripts/jquery-1.10.2.min.js", type="text/javascript")
    script(src="/javascripts/knockout-3.0.0.js", type="text/javascript")
    script(src="/javascripts/index.js", type="text/javascript")
